@model GroupDeleteModel

<div class="modal" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Group Delete</h4>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body text-left">
                <form asp-action="DeleteGroupPost" asp-controller="Groups" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" asp-for="@Model.ObjectId" />
                        <p> Do you want to delete this group?</p>
                   
                        <label asp-for="Title"><b>Group Title: @Model.Title</b></label> <br />
                        <label asp-for="Subject"><b>Group Subject: @Model.Subject</b></label> <br />
                        <label asp-for="CreatedBy"><b>Group Admin: @Model.CreatedBy</b></label> <br />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal" title="Cancel">Cancel</button>
                        <button type="submit" class="btn btn-danger" title="Delete Group">Delete Group</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

