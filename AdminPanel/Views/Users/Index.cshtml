@model IEnumerable<UserIndexModel>


<div style="margin-top: 45px; margin-left: 30px;">
    <h2>Users List</h2>
</div>

<div id="ModalHere"></div>



<div class="col-lg-12" style="padding:unset;">
    <table class="table table-bordered align-middle table-hover table-rounded table-striped table-row-dashed gy-2 gs-5">
        <thead>
            <tr>
                <th class="text-center" scope="col">User Name</th>
                <th class="text-center" scope="col">Email</th>
                <th class="text-center" scope="col">Points</th>
                <th class="text-center" scope="col">Badges</th>
                <th class="text-center" scope="col">Created Date</th>
                <th class="text-center" scope="col">Status</th>
                <th class="text-center" scope="col">Tasks</th>
                <th class="text-center" scope="col">Update</th>
                <th class="text-center" scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="text-center">@(user.FirstName + " " + user.LastName)</td>
                    <td class="text-center">@user.Email</td>                    
                    <td class="text-center">@user.Points</td>
                    <td class="text-center">@user.Badge</td>
                    <td class="text-center">@user.CreateDate</td>
                    <td class="text-center">@user.Status</td>
                    @if (user.IndividualTasks == null || user.IndividualTasks.Count == 0)
                    {
                        <td></td>
                    } else
                    {
                        <td class="text-center">
                        @foreach (var item in user.IndividualTasks)
                        {
                           @item <br />
                        }
                        </td>
                    }


                    <td class="text-center">
                        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#editModal" data-url="@Url.Action($"UpdateUser", new { id = user.ObjectId })">
                            <i class="fa fa-edit"></i>
                        </button>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#deleteModal" data-url="@Url.Action($"DeleteUser", new { id = user.ObjectId })"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>